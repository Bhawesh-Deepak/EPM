@model EPM.Core.Master.Product


<div class="container">
    <div class="panel">
        <div class="panel-header">
            Create Product
        </div>
        <div class="panel-body">
            <form asp-controller="Product" asp-action="CreateProduct"
                  enctype="multipart/form-data">
                <div class="col-md-12">
                    <div class="form-group col-md-4">
                        <label for="email">Product Name:</label>
                        <input class="form-control" asp-for="Name">
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label for="pwd">Price:</label>
                        <input class="form-control" asp-for="Price">
                        <span asp-validation-for="Price"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label for="pwd">Quantity</label>
                        <input class="form-control" asp-for="Quantity">
                        <span asp-validation-for="Quantity"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label for="pwd">Product Image</label>
                        <input type="file" asp-for="ProductImage">
                        <span asp-validation-for="ProductImage"></span>
                    </div>
                </div>
                <div class="col-md-12">
                    <button class="btn btn-primary float-right">Save</button>
                </div>

            </form>
        </div>
    </div>

</div>
